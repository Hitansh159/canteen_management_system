<!doctype html>
<html lang="en">

<head>
  <%- include('../partials/head.ejs')%>
  <style>
    table {
      border-style: solid;
      border-color: rgb(15, 238, 227);
      padding: 10px;

    }

    .shedule {
      border-style: solid;
      border-color: rgb(15, 238, 227);

    }
  </style>

</head>

<body onload="gen_bill()">


  <header>
    <%- include('../partials/header.ejs', {user : "client"})%>

  </header>

  <h1>BILL:</h1>
  <form>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Item</th>
          <th scope="col">Qyt</th>
          <th scope="col">Amt</th>
        </tr>
      </thead>

      <tbody id="table-body">


      </tbody>
    </table>

    <center>
      <button type="button" class="btn btn-primary" onclick="order()">Order</button>
      <a type="button" class="btn btn-danger" href="/clientview">Cancel</a>
    </center>
  </form>


  <p>
  <H1>Shedule</H1>
  </p>
  <div class="shedule">
    <p>Time: Select Time</p>
    <input type="time" id="eta" required><br>
    Time should be 15 min from now to 1:30 hr ahead.
  </div>
  </div>


  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
    crossorigin="anonymous"></script>

</body>
<script>

  function set_time(){
    var min_date = new Date(new Date().getTime() + (60000 * 15) );
    var hours = min_date.getHours();
    var min = min_date.getMinutes();
    console.log(hours, min);
    console.log(`${hours}:${min}`);
    var time_ele = document.getElementById("eta");
    time_ele.min = `${hours}:${min}`;

    
    var max_date = new Date(new Date().getTime() + (60000 * 90) );
    var hours = max_date.getHours();
    var min = max_date.getMinutes();

    time_ele.max = `${hours}:${min}`;
  }

  function gen_bill() {
    var order_items = JSON.parse(sessionStorage.getItem("order"));
    var rows = "";
    var i=0;

    for (fid in order_items) {

      rows +=
        `<tr id="item${i}">
          <th scope="row">${i + 1}</th>
          <td>${order_items[fid]["name"]}</td>
          <td>
            <select class="form-control" id="qyt${i}" onchange="change(${i}, ${order_items[fid]["price"]})">
              <option>0</option>
              <option selected>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </td>
          <td>
            <span id="amt${i}"> ${order_items[fid]["price"]} </span>
          </td>
        </tr>`
        i++;
    }
    document.getElementById("table-body").innerHTML = rows;
    set_time();
  }

  function change(id, price) {
    var amt = document.getElementById("amt" + id);
    var qyt = document.getElementById("qyt" + id);

    amt.innerText = price * qyt.value;
  }

  function order() {
    var final_bill = [];
    var order_items = JSON.parse(sessionStorage.getItem("order"));
    var i=0;

    for (fid in order_items) {
      var name = order_items[fid]["name"];
      var qyt = document.getElementById("qyt"+i).value;
      var price = document.getElementById("amt"+i).innerText;

      console.log([fid, name, qyt, price]);
      final_bill.push([fid, name, qyt, price]);
      i++;
    }

    var eta = document.getElementById("eta").value;
    console.log(eta); 

    fetch("/bill", {
      method: "POST",
      headers: {
        Accept: "application/json",
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        order : final_bill
      })
    });
    sessionStorage.clear();
  }

</script>

</html>